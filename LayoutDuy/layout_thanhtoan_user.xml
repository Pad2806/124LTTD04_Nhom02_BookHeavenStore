<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="15">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.1"
        android:background="@drawable/bgnotifi">

        <ImageView
            android:id="@+id/icon_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingStart="10dp"
            android:src="@drawable/backspace" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="7dp"
            android:fontFamily="@font/montserrat_bold"
            android:text="Thanh toán"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="32sp" />

        <ImageView
            android:id="@+id/icon_backhome"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:padding="10dp"
            android:src="@drawable/icon_home" />
    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="13.9"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:weightSum="14"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="13"
            android:weightSum="13"
            android:layout_marginTop="20dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:weightSum="2"
                android:orientation="vertical">
                <LinearLayout
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="2dp">
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/icon_location"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:fontFamily="@font/montserrat_bold"
                        android:text="Địa chỉ"
                        android:textSize="24sp"/>
                </LinearLayout>
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="123 Lý Tự Trọng, Thanh Bình, Hải Châu, Đà Nẵng"
                    android:background="@null"
                    android:textSize="18sp"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="20dp"
                android:background="#000000" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:background="@drawable/bgthongbao"
                android:weightSum="4">
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical" />
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="5dp">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/book1"
                        android:scaleType="fitXY"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:layout_weight="3"
                    android:weightSum="3"
                    android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:text="A Call To Return"
                            android:fontFamily="@font/montserrat_bold"
                            android:textSize="24sp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="100000 đ"
                            android:fontFamily="@font/montserrat_bold"
                            android:textColor="@color/ctsach"
                            android:textSize="20sp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        android:gravity="end|bottom">
                        <TextView
                            android:id="@+id/minus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="-"
                            android:fontFamily="@font/montserrat_bold"
                            android:textSize="20sp"
                            android:textColor="@color/black"
                            android:padding="10dp"/>
                        <TextView
                            android:id="@+id/numOrder"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1"
                            android:fontFamily="@font/montserrat_bold"
                            android:textSize="20sp"
                            android:textColor="@color/black"
                            android:padding="10dp"/>
                        <TextView
                            android:id="@+id/plus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="+"
                            android:fontFamily="@font/montserrat_bold"
                            android:textSize="20sp"
                            android:textColor="@color/black"
                            android:padding="10dp"/>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:weightSum="2"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Thành tiền: "
                        android:fontFamily="@font/montserrat_medium"
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        android:gravity="center_vertical"/>
                    <TextView
                        android:id="@+id/price"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="100000 đ"
                        android:fontFamily="@font/montserrat_bold"
                        android:textSize="20sp"
                        android:textColor="@color/pricetext"
                        android:gravity="center|end"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:weightSum="2"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Giảm giá: "
                        android:fontFamily="@font/montserrat_medium"
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        android:gravity="center_vertical"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="15.000 đ"
                        android:textSize="20sp"
                        android:fontFamily="@font/montserrat_bold"
                        android:textColor="@color/pricetext"
                        android:gravity="center|end"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:weightSum="2"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Phí vận chuyển: "
                        android:fontFamily="@font/montserrat_medium"
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        android:gravity="center_vertical"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="20.000 đ"
                        android:textSize="20sp"
                        android:fontFamily="@font/montserrat_bold"
                        android:textColor="@color/pricetext"
                        android:gravity="center|end"/>
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="#000000" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="Phương thức thanh toán"
                    android:textSize="20sp"
                    android:textColor="@color/colortext"
                    android:fontFamily="@font/montserrat_bold"
                    android:gravity="center_vertical"/>
                <LinearLayout
                    android:id="@+id/payLive"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                    <CheckBox
                        android:id="@+id/checkBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Thanh toán khi nhận hàng"
                        android:fontFamily="@font/montserrat_medium"
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        android:gravity="center_vertical"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/payOnl"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                    <CheckBox
                        android:id="@+id/checkBox1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Thanh toán trực tuyến"
                        android:fontFamily="@font/montserrat_medium"
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        android:gravity="center_vertical"/>
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="#000000" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:weightSum="2"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Tổng thanh toán"
                    android:textSize="24sp"
                    android:fontFamily="@font/montserrat_bold"
                    android:textColor="@color/black"
                    android:gravity="center_vertical"/>
                <TextView
                    android:id="@+id/totalPrice"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="20.000 đ"
                    android:textSize="24sp"
                    android:fontFamily="@font/montserrat_bold"
                    android:textColor="@color/pricetext"
                    android:gravity="center|end"/>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/orderBook"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="Đặt hàng"
            android:layout_weight="1"
            android:textAlignment="center"
            android:fontFamily="@font/montserrat_bold"
            android:layout_marginBottom="20dp"
            android:paddingVertical="10dp"
            android:background="@drawable/btn_bg"
            android:textColor="@color/colortext"
            android:textSize="26sp" />
    </LinearLayout>
</LinearLayout>